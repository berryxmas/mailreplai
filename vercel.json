{
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "dist" }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/$1"
      }
    ],
    "build": {
      "env": {
        "NODE_ENV": "production"
      }
    },
    "scripts": {
      "dev": "npm run dev-server",
      "build": "npm run build"
    }
  }